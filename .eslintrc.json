{
    "root": true,
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "overrides": [{
        "files": ["*.ts"],
        "parser": "@typescript-eslint/parser",
        "plugins": [
            "@typescript-eslint"
        ]
    }],
    "rules": {
        "@typescript-eslint/naming-convention": "warn",
        "@typescript-eslint/semi": "warn",
        "curly": "warn",
        "eqeqeq": "warn",
        "no-throw-literal": "warn",
        "semi": "off"
    },
    "ignorePatterns": [
        "**/*.d.ts"
    ]
}
